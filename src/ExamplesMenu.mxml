<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
               xmlns:s="library://ns.adobe.com/flex/spark"
               width="100%" height="100%">

    <fx:Script><![CDATA[
        import examples.*;
        import examples.afwa.*;

        import mx.collections.ArrayList;
        import mx.core.IVisualElement;

        [Bindable]
        private var examplesDataProvider:ArrayList = new ArrayList([
            Example1WebApp,
            Example6,
            Example8,
            FeatureEditorExample,
            AFWA_FW53_FW54_Example,
            AFWABrokenDefaultParams,
            AfwaLayerAddingExampleFW88,
            AfwaLayerSwitching,
            AfwaLoopingExample,
            AfwaPerformanceExample,
            AFWAProjectionLayerRouteFW71,
            Example1WebApp,
            Example2,
            Example3,
            Example4,
            Example5,
            Example6,
            Example7,
            Example8,
            ExampleDatelineWithWMSLayer,
            ExampleIDS_AreaProbability,
            ExampleIDS_AreaStatistics,
            ExampleIDS_GridSubSet,
            ExampleIDS_TimeSeriesAtPoint,
            ExampleIDS_VolumeStatistics,
            ExampleIDS_WeatherWarningsForPlace,
            ExampleMultiViewWithConfiguration,
            FeatureEditorExample,
            FlexiWeatherExample,
            FlyingRouteExample,
            GetCapabilitiesParsingExample,
            GetCapabilitiesXMLNodeParsingExample,
            InteractiveLayerTiledExample,
            KMLInfoWindowTest,
            PreloadingFramesExample,
            RotatedProjectionExample,
            SimpleWMSWithQTTExample,
            /*Test,*/
            TileSizeExample,
            URLPostCancelTest
        ]);

        private function onUserSelectExample():void {
            moduleGroup.removeAllElements();
            var example:IVisualElement = new (moduleSelector.selectedItem as Class)();
            example.percentWidth = 100;
            example.percentHeight = 100;
            moduleGroup.addElement(example);
        }
        ]]></fx:Script>

    <s:VGroup id="buttonGroup" width="100%" height="100%">
        <s:ComboBox id="moduleSelector" width="225" labelFunction="{getQualifiedClassName}" prompt="Please Select Example" dataProvider="{examplesDataProvider}" change="onUserSelectExample()" >
            <s:layout>
                <s:VerticalLayout requestedRowCount="20"/>
            </s:layout>
        </s:ComboBox>
        <s:Group id="moduleGroup" width="100%" height="100%" />
    </s:VGroup>

</s:Application>

