<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:widgets="com.iblsoft.flexiweather.widgets.*"
				applicationComplete="init()"
				xmlns="*">
	
	<fx:Style source="css/fonts.css"/>
	
	<fx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			[Bindable] 
			private var array : ArrayCollection;
			
			
			private function init(): void
			{
				array = new ArrayCollection();
				array.addItem({car:"Skoda",price:14000});
				array.addItem({car:"Toyota",price:16000});
				array.addItem({car:"Ford",price:18000});
			}
		]]>
	</fx:Script>
	
	<s:DataGrid rotation="90" dataProvider="{array}">
		<s:columns>
			<s:ArrayList>
				<s:GridColumn itemRenderer="examples.ui.HorizontalDataGridItemRenderer" dataField="car"/>
				<s:GridColumn itemRenderer="examples.ui.HorizontalDataGridItemRenderer" dataField="price"/>
			</s:ArrayList>
		</s:columns>
	</s:DataGrid>
	
</s:Application>