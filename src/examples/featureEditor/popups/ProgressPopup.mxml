<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
					  xmlns:s="library://ns.adobe.com/flex/spark" 
					  xmlns:mx="library://ns.adobe.com/flex/mx"
					  title="{title}">
	
	<s:layout>
		<s:VerticalLayout verticalAlign="middle" horizontalAlign="left" paddingTop="20" paddingBottom="20" paddingLeft="20" paddingRight="20"/>
	</s:layout>
	
	<s:Label width="100%" text="{description}" fontWeight="bold" color="0x555555"/>
	<mx:ProgressBar id="bar" indeterminate="true" mode="{progressMode}" width="100%" horizontalCenter="0" trackHeight="25" labelPlacement="center" label="{progressLabel}"/>
	
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var description: String;
			
			[Bindable]
			public var progressLabel: String;
			
			[Bindable]
			public var progressMode: String = "manual";
			
		]]>
	</fx:Script>
</s:TitleWindow>