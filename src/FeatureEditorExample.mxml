<?xml version="1.0" encoding="utf-8"?>
<FlexiWeatherTemplate xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" minWidth="955" minHeight="600"
			   xmlns:widgets="com.iblsoft.flexiweather.widgets.*"
			   xmlns="*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:VGroup width="100%" height="100%">
		<s:HGroup width="100%">
			<s:Button label="Front" click="addNewFront()"/>
			<s:Button label="Pressure Centre" click="addNewPressureCentre()"/>
		</s:HGroup>
		
		<widgets:InteractiveWidget id="m_iw" width="100%" height="100%">
			<widgets:InteractiveLayerZoom id="m_ilz" zOrder="1"/>
			<widgets:InteractiveLayerPan id="m_ilp" zOrder="2"/>
		</widgets:InteractiveWidget>
		
	</s:VGroup>
	<fx:Script>
		<![CDATA[
			import com.iblsoft.flexiweather.ogc.Version;
			import com.iblsoft.flexiweather.ogc.editable.InteractiveLayerWFSEditable;
			import com.iblsoft.flexiweather.ogc.editable.features.WFSFeatureEditableFront;
			import com.iblsoft.flexiweather.ogc.editable.features.WFSFeatureEditablePressureCentre;
			import com.iblsoft.flexiweather.proj.Coord;
			
			import mx.events.FlexEvent;
			
			private var wfsLayer: InteractiveLayerWFSEditable;
			
			override protected function onCreationComplete(event:FlexEvent):void
			{
				super.onCreationComplete(event);
				
				m_iw.setCRS('CRS:84', false);
				m_iw.setExtentBBOXRaw(-180, -90, 180, 90);
				
				addLayer('dem', 1);
				addLayer('foreground', 1);
				
				wfsLayer = createNewEditableWFSLayer();
				m_iw.addLayer(wfsLayer);
				
				getAllServicesCapabilities();
			}
			
			private function createNewEditableWFSLayer(): InteractiveLayerWFSEditable
			{
				return new InteractiveLayerWFSEditable(m_iw, new Version(1,0,0));
			}
			
			private function addNewPressureCentre(): void
			{
				var pressureCentre: WFSFeatureEditablePressureCentre = new WFSFeatureEditablePressureCentre("http://www.iblsfot.com/wfs", "PressureCentre", null);

				var x: Number = Math.random() * 340.0 - 170.0;
				var y: Number = Math.random() * 160.0 - 80.0;
				pressureCentre.coordinates = [
					new Coord(m_iw.getCRS(), x - 5, y - 10),
				];
				
				wfsLayer.addFeature(pressureCentre);
				
			}
			private function addNewFront(): void
			{
				var front: WFSFeatureEditableFront = new WFSFeatureEditableFront("http://www.iblsfot.com/wfs", "Front", null);

				var x: Number = Math.random() * 340.0 - 170.0;
				var y: Number = Math.random() * 160.0 - 80.0;
				front.addPoint( new Coord(m_iw.getCRS(), x - 5, y - 10) );
				front.addPoint( new Coord(m_iw.getCRS(), x + 5, y - 10) );
				front.addPoint( new Coord(m_iw.getCRS(), x + 5, y + 10) );
				front.addPoint( new Coord(m_iw.getCRS(), x - 5, y + 10) );
				
				wfsLayer.addFeature(front);
				
			}
		]]>
	</fx:Script>
</FlexiWeatherTemplate>
